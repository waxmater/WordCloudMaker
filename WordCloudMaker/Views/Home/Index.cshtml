@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="input-group">
        <button class="btn-upload">Загрузить список запросов</button>
        <input type="text" class="form-control" placeholder="Введите тему">
        <button class="btn-create ms-2">Создать</button>
    </div>
    <div placeholder="картинка" class="image-box">
        <img src="@Url.Action("GetImage", "Home")" alt="Word Cloud" width="1200" height="1200"/>
    </div>
    <div class="d-flex justify-content-between">
        <button class="btn-cancel">Отмена</button>
        <form asp-action="GetImage">
            <button type="submit" class="form-control">Скачать</button>
        </form>
    </div>
</div>